 <%= turbo_frame_tag dom_id(note) do %>
  <div class="card my-2 p-3">
    <div><%= note.date.strftime('%e %b, %Y') %></div>
    <div><%= note.body %></div>

    <div class="d-flex mt-1">
      <div class="me-2">
        <%= link_to note, data: { "turbo-method": :delete } do %>
          <i class="bi bi-trash btn btn-outline-secondary"></i>
        <% end %>
      </div>

      <div class="me-2">
        <%= link_to edit_note_path(note) do %>
          <i class="bi bi-pencil btn btn-outline-secondary"></i>
        <% end %>
      </div>
    </div>
  </div>
<% end %>