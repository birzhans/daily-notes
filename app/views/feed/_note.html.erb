 <%= turbo_frame_tag dom_id(note) do %>
  <div class="card my-2 p-3">
    <div class="text-secondary"><b><%= note.username %></b></div>
    <div><%= note.date.strftime('%e %b, %Y') %></div>
    <div><%= note.body %></div>

    <div class="d-flex mt-1">
      <div class="me-2">
        <%= link_to note do %>
          <i class="bi bi-heart btn btn-outline-secondary"></i>
        <% end %>
      </div>
    </div>
  </div>
<% end %>